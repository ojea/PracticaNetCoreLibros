@using System.Security.Claims
<div class="container py-3">
    <div class="container">
        <h1>Bienvenido @Context.User.Identity.Name</h1>
        <h2>Email @Context.User.FindFirst(ClaimTypes.Email).Value</h2>
        <p>Apellido @Context.User.FindFirst(ClaimTypes.Surname).Value</p>
        <img style="width:150px; height:150px" src="~/images/@Context.User.FindFirst("FOTO").Value" />
    </div>
</div>