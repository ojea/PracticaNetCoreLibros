@if(!Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link"
        asp-controller="Usuarios"
        asp-action="Perfil">
        Log In
        </a>
    </li>
} else
{
    <li class="nav-item">
        <a class="nav-link"
           asp-controller="Usuarios"
           asp-action="Perfil">
            Perfil
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link"
           asp-controller="Libros"
           asp-action="Pedidos">
            Pedidos
        </a>
    </li>


    <li class="nav-item">
        <a class="nav-link"
           asp-controller="Managed"
           asp-action="LogOut">
            Log Out <span>@Context.User.Identity.Name</span>
        </a>
    </li>
}